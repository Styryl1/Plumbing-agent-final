		"jsonwebtoken": "^9.0.2",
		"lucide-react": "^0.544.0",
		"next": "15.5.3",
		"next-intl": "^4.3.9",
		"next-themes": "^0.4.6",
		"preact": "^10.27.2",
		"react": "19.1.1",
		"react-day-picker": "^9.11.0",
		"react-dom": "19.1.1",
