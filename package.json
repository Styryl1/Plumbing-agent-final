		"@types/node": "^22.18.3",
		"@types/pg": "^8.15.5",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"@vitest/ui": "^3.2.4",
		"change-case": "^5.4.4",
		"cross-env": "^10.0.0",
		"dotenv": "^17.2.2",
