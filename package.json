{
	"name": "plumbing-agent",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"preinstall": "node scripts/check-node-version.cjs",
		"predev": "pnpm i18n:aggregate",
		"dev": "next dev",
		"prebuild": "pnpm i18n:aggregate && pnpm i18n:sync",
		"build": "next build",
		"start": "next start",
		"typecheck": "tsc --noEmit",
		"check": "pnpm i18n:aggregate && pnpm -s typecheck && pnpm -s lint && pnpm -s i18n:lint",
		"lint": "eslint . --max-warnings=0 --cache --cache-location .eslintcache",
		"lint:fix": "eslint . --max-warnings=0 --cache --cache-location .eslintcache --fix",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"preguard": "node scripts/check-node.mjs && corepack enable && corepack prepare pnpm@9.12.3 --activate",
		"guard": "pnpm run preguard && biome format --write . && biome check --write . && pnpm lint && node scripts/pretypecheck.mjs && tsc --noEmit && node scripts/check-imports.mjs && node scripts/check-routes.mjs && node scripts/check-encoding.mjs && node scripts/check-placeholders.mjs && pnpm i18n:aggregate && pnpm i18n:prune && pnpm i18n:scan && pnpm i18n:check && pnpm i18n:lint && pnpm i18n:parity && pnpm i18n:coverage-report && node scripts/audit-production-rules.mjs && next build",
		"work": "cross-env WB_ALLOW_DB=1 pnpm test && cross-env WB_ALLOW_DB=1 npx vitest run --config workbench/vitest.config.ts",
		"guard-safe": "node scripts/guard-safe.mjs",
		"context": "node scripts/create-gpt5-bundle.mjs",
		"i18n:sync": "node scripts/i18n-sync.mjs",
		"i18n:fix": "node scripts/i18n-fix-literals.mjs",
		"i18n:aggregate": "tsx scripts/i18n/aggregate.ts",
		"i18n:scan": "node scripts/i18n-code-scanner.mjs",
		"i18n:prune": "node --import tsx scripts/i18n-prune.ts",
		"i18n:check": "node --import tsx scripts/i18n-check.ts",
		"i18n:lint": "tsx scripts/i18n/lint-double-namespace.ts",
		"i18n:parity": "node scripts/i18n-parity-check.mjs",
		"i18n:migrate-to-root": "node scripts/i18n-migrate-to-root.mjs",
		"i18n:coverage-report": "node scripts/i18n-coverage-report.mjs",
		"clean": "rimraf .next .turbo node_modules/.cache .eslintcache",
		"dev:clean": "pnpm clean && pnpm dev",
		"build:clean": "pnpm clean && pnpm build"
	},
	"dependencies": {
