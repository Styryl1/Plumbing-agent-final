{
	"name": "plumbing-agent",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"preinstall": "node scripts/check-node-version.cjs",
		"dev": "pnpm i18n:aggregate && next dev",
		"build": "pnpm i18n:doctor && next build",
		"start": "next start",
		"typecheck": "tsc --noEmit",
		"lint": "eslint . --max-warnings=0 --cache --cache-location .eslintcache",
		"check": "pnpm i18n:doctor && pnpm -s typecheck",
		"test": "vitest run",
		"test:watch": "vitest",
		"guard": "biome format --write && biome check --write && pnpm lint && node scripts/pretypecheck.mjs && tsc --noEmit && node scripts/check-imports.mjs && node scripts/check-routes.mjs && node scripts/check-encoding.mjs && node scripts/check-placeholders.mjs && pnpm i18n:doctor && node scripts/audit-production-rules.mjs && next build",
		"work": "cross-env WB_ALLOW_DB=1 pnpm test && cross-env WB_ALLOW_DB=1 npx vitest run --config workbench/vitest.config.ts",
		"guard-safe": "node scripts/guard-safe.mjs",
		"context": "node scripts/create-gpt5-bundle.mjs",
		"i18n:aggregate": "tsx scripts/i18n/aggregate.ts",
		"i18n:verify": "tsx scripts/i18n/verify.ts",
		"i18n:keys:report": "tsx scripts/i18n/report-missing.ts",
		"i18n:doctor": "pnpm i18n:aggregate && pnpm i18n:verify && pnpm i18n:keys:report",
		"dev:bg": "bash -lc './scripts/start-dev.sh'",
		"dev:stop": "bash -lc './scripts/stop-dev.sh'",
		"logs": "bash -lc 'touch .logs/dev.log && tail -F -n 200 .logs/dev.log'",
		"logs:once": "bash -lc 'touch .logs/dev.log && tail -n 200 .logs/dev.log'",
		"logs:errors": "bash -lc \"mkdir -p .logs && touch .logs/dev.log && tail -F -n 200 .logs/dev.log | stdbuf -oL -eL rg -in --line-buffered '(^|\\b)(err|error|warn|failed|exception|unhandled|econn|eaddr|timeout)(\\b|:)'\"",
		"logs:clerk": "bash -lc \"mkdir -p .logs && touch .logs/dev.log && tail -F -n 200 .logs/dev.log | stdbuf -oL -eL rg -i --line-buffered 'clerk'\"",
		"logs:app": "bash -lc \"mkdir -p .logs && touch .logs/dev.log && tail -F -n 200 .logs/dev.log | stdbuf -oL -eL rg -vi --line-buffered 'clerk|oauth|jwks|id_token|session|organization'\"",
		"logs:snap": "bash -lc 'mkdir -p .logs && touch .logs/dev.log && tail -n 300 .logs/dev.log > .logs/last-300.log && echo .logs/last-300.log'",
		"logs:truncate": "bash -lc 'mkdir -p .logs && : > .logs/dev.log && echo truncated'",
		"clean": "rimraf .next .turbo node_modules/.cache .eslintcache",
		"db:start": "supabase start",
		"db:types:local": "supabase gen types typescript --local --schema public > src/types/supabase.generated.ts",
		"db:types:remote": "supabase gen types typescript --project-id $SUPABASE_PROJECT_REF --schema public > src/types/supabase.generated.ts",
		"db:types": "pnpm -s db:types:local || pnpm -s db:types:remote",
		"db:types:project": "PATH=/home/linuxbrew/.linuxbrew/bin:$PATH supabase gen types --project-id akuktezoisvblrnkaljb --schema public > src/types/supabase.generated.ts"
	},
	"dependencies": {
		"@ai-sdk/openai": "^2.0.32",
		"@ai-sdk/react": "^2.0.48",
		"@clerk/nextjs": "^6.32.0",
